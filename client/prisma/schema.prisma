generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Movie {
  id                   Int                          @id
  imdb_id              String?
  backdrop_path        String?
  budget               Float?
  original_title       String?
  original_title_slug  String?
  overview             String?
  popularity           Float?
  poster_path          String?
  release_date         DateTime?
  revenue              Float?
  runtime              Int?
  status               String?
  tagline              String?
  title                String?
  title_slug           String?
  vote_average         Float?
  vote_count           Int?
  spoken_languages     String?
  genres               String?
  wikipedia_url_es     String?
  wikipedia_content_es String?
  ollama_embeddings    Unsupported("vector(1024)")?
  openai_embeddings    Unsupported("vector(1536)")?
  vertex_embeddings    Unsupported("vector(1536)")?
}
